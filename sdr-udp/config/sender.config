# SDR Sender Configuration
# -----------------------------
# Set the MTU size for UDP payload
mtu_bytes=4096

# Number of packets per chunk
packets_per_chunk=32

# Sliding window size (used by SR)
window_size=500

# Transfer ID (must match receiver)
transfer_id=1

# Channels (keep =1 unless doing multichannel transmit)
num_channels=1

